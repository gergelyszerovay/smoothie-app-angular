{
  "name": "@gergelyszerovay/aibd-template-angular",
  "version": "1.0.1",
  "description": "An Angular boilerplate template with TailwindCSS and NgRx for AIBD development projects",
  "scripts": {
    "ng": "pnpm exec ng",
    "start": "pnpm exec ng serve --host=127.0.0.1",
    "build": "pnpm exec ng build",
    "watch": "pnpm exec ng build --watch --configuration development",
    "test": "echo 'disabled, dont run or implement tests'",
    "test:watch": "CHROME_BIN=/usr/bin/chromium pnpm exec ng test --watch=true --no-progress --browsers=ChromeHeadless",
    "test:coverage": "CHROME_BIN=/usr/bin/chromium pnpm exec ng test --watch=false --no-progress --browsers=ChromeHeadless --code-coverage",
    "lint": "ng lint",
    "prettier": "pnpm exec prettier ./src --write",
    "madge": "pnpm exec madge --ts-config ./tsconfig.app.json --circular ./src/main.ts",
    "docs:gen-overview": "tsx aibd/tools/generate-html-prototypes-overview-tool/generate-overview.ts",
    "remove-implementation": "rm -rf ./src ./aibd-vibe-specs/3-implementation/stories/* ./aibd-vibe-specs/3-implementation/reports/* ./agent-logs/* && tar -xzf ./.host/src-empty-angular-project.tgz"
  },
  "dependencies": {
    "@angular/animations": "^20.0.4",
    "@angular/common": "^20.0.4",
    "@angular/compiler": "^20.0.4",
    "@angular/core": "^20.0.4",
    "@angular/forms": "^20.0.4",
    "@angular/platform-browser": "^20.0.4",
    "@angular/platform-browser-dynamic": "^20.0.4",
    "@angular/router": "^20.0.4",
    "@ngrx/operators": "^20.0.0",
    "@ngrx/signals": "^20.0.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "20.1.1",
    "@angular/build": "^20.0.3",
    "@angular/cli": "^20.0.3",
    "@angular/compiler-cli": "^20.0.4",
    "@eslint/js": "^9.29.0",
    "@gergelyszerovay/eslint-plugin-path-boundary-imports": "1.0.6",
    "@softarc/eslint-plugin-sheriff": "0.18.0",
    "@softarc/sheriff-core": "0.18.0",
    "@testing-library/angular": "17.4",
    "@testing-library/dom": "10.4.0",
    "@types/jasmine": "~5.1.7",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.1.0",
    "angular-eslint": "20.1.1",
    "autoprefixer": "^10.4.21",
    "ccusage": "^15.5.2",
    "eslint": "^9.29.0",
    "eslint-cli": "1.1.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.19",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "jasmine-core": "~5.6.0",
    "jsdom": "^26.1.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "15.5.1",
    "madge": "8.0.0",
    "postcss": "^8.5.3",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "tailwindcss": "^3.4.17",
    "taze": "19.0.4",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "8.34.1",
    "zone.js": "0.15.1"
  },
  "packageManager": "pnpm@10.7.1"
}